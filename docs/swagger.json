{
    "swagger": "2.0",
    "info": {
        "title": "Item API",
        "contact": {}
    },
    "paths": {
        "/items": {
            "get": {
                "description": "Responds with the list of all items as JSON.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "items"
                ],
                "summary": "Get all items",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/item_model.Item"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Creates a new item with the provided details",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "items"
                ],
                "summary": "Create a new item",
                "parameters": [
                    {
                        "description": "Item details for creation",
                        "name": "item",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/item_model.Item"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/item_model.Item"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "item_model.Item": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "price": {
                    "type": "number",
                    "format": "float32"
                },
                "rating": {
                    "type": "string"
                },
                "releaseDate": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                }
            }
        }
    }
}